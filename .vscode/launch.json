{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug PW",
            "runtimeExecutable": "yarn",
            "args": [
                "playwright",
                "test",
                "--project=chromium",
                "--grep=B-1"
            ],
            "env": {
                "ENV": "dev",
                "HEADLESS": "false"
            },
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}